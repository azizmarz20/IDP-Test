<body>

<div class="container">
    <div class="toggle" onclick="toggleMode()">üåô / ‚òÄÔ∏è</div>
    <div class="header">Saudi Aramco Knowledge Assessment</div>

    <h2 id="question"></h2>
    <div id="options"></div>
    <div id="feedback" class="feedback"></div>

    <button id="nextBtn" onclick="nextQuestion()">Next</button>
</div>

<script>
/* ========= QUESTIONS ========= */
const questions = [
    {
        question: "What is the capital of Saudi Arabia?",
        options: ["Jeddah", "Riyadh", "Dammam", "Mecca"],
        correct: 1
    },
    {
        question: "Which color indicates a warning sign?",
        options: ["Green", "Blue", "Yellow", "White"],
        correct: 2
    },
    {
        question: "Minimum passing score is?",
        options: ["60%", "70%", "80%", "90%"],
        correct: 2
    }
];
/* ============================= */

let currentQuestion = 0;
let score = 0;
let answered = false;

/* Shuffle */
function shuffleArray(arr) {
    for (let i = arr.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [arr[i], arr[j]] = [arr[j], arr[i]];
    }
}

/* Dark / Light toggle */
function toggleMode() {
    document.body.classList.toggle("light");
}

const questionEl = document.getElementById("question");
const optionsEl = document.getElementById("options");
const feedbackEl = document.getElementById("feedback");
const nextBtn = document.getElementById("nextBtn");

function loadQuestion() {
    answered = false;
    nextBtn.disabled = true;
    feedbackEl.innerHTML = "";

    const q = questions[currentQuestion];
    questionEl.innerText = `Q${currentQuestion + 1}. ${q.question}`;
    optionsEl.innerHTML = "";

    let opts = q.options.map((t, i) => ({ t, i }));
    shuffleArray(opts);

    opts.forEach(o => {
        const div = document.createElement("div");
        div.className = "option";
        div.innerText = o.t;
        div.onclick = () => selectOption(div, o.i, q.correct);
        optionsEl.appendChild(div);
    });
}

function selectOption(div, selected, correct) {
    if (answered) return;
    answered = true;

    document.querySelectorAll(".option").forEach(o => {
        if (o.innerText === questions[currentQuestion].options[correct]) {
            o.classList.add("correct");
        }
    });

    if (selected === correct) {
        score++;
        feedbackEl.innerText = "Correct ‚úÖ";
    } else {
        div.classList.add("wrong");
        feedbackEl.innerHTML =
            `Wrong ‚ùå<br>Correct answer: <strong>${questions[currentQuestion].options[correct]}</strong>`;
    }

    nextBtn.disabled = false;
}

function nextQuestion() {
    currentQuestion++;
    currentQuestion < questions.length ? loadQuestion() : showResult();
}

function showResult() {
    const percent = Math.round((score / questions.length) * 100);
    const pass = percent >= 80;

    document.querySelector(".container").innerHTML = `
        <div class="header">Assessment Result</div>
        <p><strong>${score} / ${questions.length}</strong></p>
        <p><strong>${percent}%</strong></p>
        <p class="${pass ? "pass" : "fail"}">
            ${pass ? "PASS ‚úÖ" : "FAIL ‚ùå"}
        </p>
        <p>Passing score: 80%</p>
    `;
}

/* Start */
shuffleArray(questions);
loadQuestion();
</script>

</body>
